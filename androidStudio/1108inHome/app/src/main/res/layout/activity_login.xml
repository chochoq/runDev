<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="login"
    android:textColor="#D21E0903"
    android:textSize="30sp"
    />

<ImageView
    android:layout_width="211dp"
    android:layout_height="188dp"
    android:layout_gravity="center"
    android:src="@drawable/icon_login" />

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/TextInputEditText_Email"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="email"
        android:layout_margin="10sp"
        />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/TextInputEditText_PW"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_margin="10sp"
        android:inputType="textPassword"
        android:hint="passWord"/>
</com.google.android.material.textfield.TextInputLayout>


<RelativeLayout
    android:id="@+id/RelativeLayout_Login"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:layout_margin="10sp"
    android:background="@drawable/icon_rudius2"
    android:orientation="horizontal"
    android:weightSum="1"
    android:clickable="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#ffffff"
        android:stateListAnimator="@null"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:text="Login"/>

    <ImageView
        android:id="@+id/imgOne"
        android:layout_width="48dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_login" />
</RelativeLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="or"
    android:textSize="20sp" />


<LinearLayout
    android:id="@+id/LinearLayout_LoginFB"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:orientation="horizontal"
    android:background="@drawable/icon_rudius"
    android:layout_margin="10sp"
    android:clickable="true"
    >
    <ImageView
        android:layout_marginLeft="30sp"
        android:id="@+id/imgTwo"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/icon_login" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textColor="#ffffff"
        android:stateListAnimator="@null"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:text="Login with FaceBook"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_marginTop="10sp"
    >

    <TextView
        android:id="@+id/TextView_finPW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="find PW"
        android:layout_weight="5"
        android:gravity="center"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/TextView_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="join us"
        android:textColor="#2196F3"
        android:gravity="center"
        android:layout_weight="5"
        android:clickable="true"/>
</LinearLayout>

</LinearLayout>