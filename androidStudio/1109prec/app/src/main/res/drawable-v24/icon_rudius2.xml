<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#EEE" />
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
            <corners android:radius="20dp" />
            <solid android:color="#25D2FE" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#EEE" />
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
            <corners android:radius="20dp" />
            <solid android:color="#05CBFD" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#EEE" />
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
            <corners android:radius="20dp" />
            <solid android:color="#B30F3D" />
        </shape>
    </item>
</selector>